    Location: <br/>
    <input type="text" name="loc" id="autoLoc"  placeholder="Enter a location" /> <input type="text" name="latlng" id="latlng" placeholder="Latitude & Longtitude" /><br/>
    Party Date: <br/>
    <input type="date" name="partyDate"><br/>

    
    <div ng-app="imageuploadDemo" ng-controller="DemoCtrl">
            
            <input id="pic" 
                name = "pic"
                type="file" 
                accept="image/*" 
                image="image" 
                resize-max-height="300"
                resize-max-width="250"
                resize-quality="0.7" />
            
            <img ng-show="image" ng-src="{{image.resized.dataURL}}"/>
    </div>

    

    Paragraph: <br/>
    <textarea name="post" rows="20" cols="100"></textarea><br/>
    <input type="submit" value="post"/>
</form>


